{
  "name": "Refude",
  "description": "Allow opening the refude search page from RefudeServices",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "content_scripts": [{
    "matches": ["http://localhost:7938/*"],
    "js": ["contentScript.js"] 
  }],
  "permissions": ["tabs", "background", "storage"],
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  }
}
