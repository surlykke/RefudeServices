#!/usr/bin/env bash
if [[ "i3" == "$XDG_CURRENT_DESKTOP" ]]; then 
	if wmctrl -l | grep org.refude.browser; then
		i3-msg '[title="org.refude.browser"] scratchpad show'
		i3-msg '[title="org.refude.browser"] focus'
	else  
		nohup /opt/google/chrome/google-chrome --app=http://localhost:7938/refude/html/browser >/dev/null 2>/dev/null &
	fi
else 
	# Assume we have an EWMH compliant WM. TODO Adapt to more DE's
	wmctrl -a org.refude.browser ||
	nohup /opt/google/chrome/google-chrome --app=http://localhost:7938/refude/html/browser >/dev/null 2>/dev/null &	
fi

	
